@model SacramentProject.Models.Speakers

@{
    ViewData["Title"] = "Create";
    var url = Url.ActionContext.RouteData.Values["id"];
    int id = Convert.ToInt32(url);
    //asp - items = "ViewBag.SacramentProgramId"
}

<h2>Create</h2>

<h4>Speakers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="SacramentProgramId" class="control-label"></label>
                <input asp-for="SacramentProgramId" class ="form-control" value="@id"/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index/@id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
