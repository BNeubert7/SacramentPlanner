@model IEnumerable<SacramentProject.Models.SacramentProgram>

@{
    ViewData["Title"] = "Index";
}

<h2>Sacrament Program</h2>

<p>
    <a asp-action="Create">Create New Program</a>
</p>
<p>
    To add, edit, or delete speakers to a Sacrament Program, click on View Speakers in table below.
</p>
<table class="table">
    <thead>
        <tr>
            <th>Details</th>
                <th>
                    @Html.DisplayNameFor(model => model.MeetingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Conducting)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpeningSong)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpeningPrayer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SacramentSong)
                </th>
                <!--<th>
                    Html.DisplayNameFor(model => model.IntermediateSong)
                </th>-->
                <th>
                    @Html.DisplayNameFor(model => model.ClosingSong)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClosingPrayer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Speakers)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SacramentProgramId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SacramentProgramId">Info</a> |
                <a asp-action="Delete" asp-route-id="@item.SacramentProgramId">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conducting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningSong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningPrayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentSong)
            </td>
            <!--<td>
                Html.DisplayFor(modelItem => item.IntermediateSong)
            </td>-->
            <td>
                @Html.DisplayFor(modelItem => item.ClosingSong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingPrayer)
            </td>
            <td>
                <a href="~/Speakers/Index/@item.SacramentProgramId">View Speakers</a>
            </td>
        </tr>
}
    </tbody>
</table>
